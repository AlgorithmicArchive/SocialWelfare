<form action="/Officer/UploadCertificate" method="post">
    <div class="full-screen-section center-align">
        <div class="container">
            <p class="fs-3 fw-bold text-center">Register Digital Certificate</p>
            <div class="custom-card flex-column gap-3 border-top border-start border-dark p-3">
                <label for="CertificateFile">Certificate File</label>
                <input class="form-control" type="file" name="certificate" id="certificate" accept=".crt,.pfx"
                    required />
                <label for="Password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required />
                <button class="btn btn-dark">Register Certificate</button>
            </div>
        </div>
    </div>
</form>
