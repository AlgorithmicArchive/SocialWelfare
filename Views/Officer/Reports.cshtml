                        <span class="text">Rejected</span>
                        <p class="value" id="rejected">20</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row w-100">
            <div class="col-lg-4 offset-lg-2 mb-2">
                <div class="custom-card d-flex flex-column mb-2 p-2" style="height: 10vh;">
                    <div class="d-flex gap-3">
                        <p>District: <span class="fw-bold" id="chartDistirct"></span></p>
                        <p>Officer: <span class="fw-bold" id="chartOfficer">All</span></p>
                    </div>
                    <p>Service: <span class="fw-bold" id="chartService">All</span></p>
                </div>
                <div class="custom-card flex-column bg-white text-dark mx-auto">
                    <canvas id="myChart" height="350" width="350"></canvas>
                </div>
            </div>

            <div class="col-lg-4 mx-auto">
                <div class="custom-card d-flex flex-column mb-2" style="height: 10vh;">
                    <p class="fw-bold">All District Data</p>
                </div>
                <div class="custom-card flex-column">
                    <canvas id="allDistrict" height="350" width="350"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mb-5 mt-3 p-5">
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-striped table-hover table-bordered w-100" id="applicationsTable">
                <thead class="bg-dark text-white">
                </thead>
                <tbody id="tbody"></tbody>
            </table>
        </div>
    </div>

</div>

