<div class="full-screen-section flex-column py-5">
    <div class="container-fluid py-5">
        <div class="container shadow-lg rounded-border" style="max-height: 60vh;overflow-y: auto;">
            <div class="row p-3">
                <div class="col-sm-4">
                    <img id="userImage" src="/resources/profile.png" alt="Profile"
                        class="img-fluid rounded-circle object-fit-contain border border-2 border-dark mx-auto"
                        style="width: 200px; height:200px;">
                </div>
                <div class="col-sm-8">
                    <div class="row" id="personalDetails">
                        <div class="col-sm-12">
                            <p class="font-heading">Personal Details</p>
                        </div>
                    </div>
                    <div class="row" id="addressDetails">
                        <div class="col-sm-12">
                            <p class="font-heading">Address Details</p>
                        </div>
                    </div>
                    <div class="row" id="bankDetails">
                        <div class="col-sm-12">
                            <p class="font-heading">Bank Details</p>
                        </div>
                    </div>
                    <div class="row mt-2" id="showPreviousActions"
                        style="display: none;max-height: 200px;overflow-y: auto;">
                        <div class="col-sm-12">
                            <p class="font-heading">
                                Previous Actions
                            </p>
                        </div>
                        <div class="col-sm-12">
                            <table class="table table-responsive table-bordered table-striped">
                                <thead class="bg-dark text-white">
                                    <th>Officer</th>
                                    <th>Action</th>
                                    <th>Action Taken on</th>
                                    <th>Remarks</th>
                                    <th>Files</th>
                                </thead>
                                <tbody id="previousActions"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row" id="documents">
                        <div class="col-sm-12">
                            <p class="font-heading">Documents</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid py-5">
        <div class="container">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Action To Take</h1>
                </div>
                <div class="modal-body">
                    <div class="container d-flex flex-column gap-2">
                        <label for="Choose Action">Choose Action</label>
                        <select name="action" id="action" class="form-select">
                        </select>
                        <div id="extra" style="max-height:240px;overflow-y:auto">

                        </div>
                        <div id="extraDetails">

                        </div>
                        <div id="ceritificateDetails" class="shadow rounded-border p-3" style="display: none;">
                            <p class="fs-3 fw-bold text-center">Certificate Details</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<button class="d-none" id="showDoc" data-bs-toggle="modal" data-bs-target="#showDocument"></button>
<button class="d-none" id="sanctionButton" data-bs-toggle="modal" data-bs-target="#showSanctionLetter"></button>


<div class="modal" id="showDocument">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="container-fluid" id="documentDisplay">
                    <iframe id="myIframe" style="width: 100%; height: 800px;"></iframe>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal" id="showSanctionLetter">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="container-fluid" id="sanctionLetterDistplay">
                    <iframe id="sanctionFrame" style="width: 100%; height: 800px;"></iframe>
                    <button class="btn btn-dark d-flex mx-auto" id="approve">Approve</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    const ApplicationDetails = @Html.Raw(Json.Serialize(Model));
    const updateColumn = JSON.parse(
        ApplicationDetails.serviceContent.updateColumn
    );
    const updateObject =
        ApplicationDetails.updateObject != ""
            ? JSON.parse(ApplicationDetails.updateObject)
            : "";
</script>

<script src="/js/Officer/UserDetails/userDetailsHelper.js"></script>
<script src="/js/Officer/UserDetails/userDetails.js"></script>
<script src="/js/formvalidations.js"></script>