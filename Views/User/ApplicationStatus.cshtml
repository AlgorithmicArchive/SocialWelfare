<div class="full-screen-section center-align flex-column">
    <div class="container">
        <table class="table table-striped table-hover table-bordered" id="statusTable">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Reference Number <i class="fa-solid fa-sort"></i></th>
                    <th scope="col">Applicant Name <i class="fa-solid fa-sort"></i></th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody id="userDetails">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content w-100">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Application Timeline</h1>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row mb-3 center-align">
                        <table class="table table-bordered table-responsive table-striped">
                            <thead class="bg-dark text-white">
                                <th>Received On</th>
                                <th>Officer</th>
                                <th>Action Taken</th>
                                <th>Remarks</th>
                            </thead>
                            <tbody id="timeline">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-dark" id="statusButtons">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateRequest" tabindex="-1" aria-labelledby="updateRequestLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content w-100">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title fs-5" id="updateRequestLabel">Update Request</h1>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid" id="updateRequestContainer">

                </div>
            </div>
            <div class="modal-footer bg-dark" id="statusButtons">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    const applications = @Html.Raw(Json.Serialize(Model));
</script>
<script src="/js/pagination.js"></script>
<script src="/js/formvalidations.js"></script>
<script src="/js/User/applicationStatus.js"></script>