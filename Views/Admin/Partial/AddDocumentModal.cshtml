<!-- Bootstrap Modal -->
<div class="modal fade" id="addDocumentModal" tabindex="-1" aria-labelledby="addDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addDocumentModalLabel">Add New Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addDocument">
                    <div class="mb-3">
                        <label for="documentLabel" class="form-label">Label</label>
                        <input type="text" class="form-control" id="documentLabel" required>
                    </div>
                    <div id="enclosureoOptionsContainer" class="mb-3">
                        <label class="form-label">Options</label>
                        <div id="enclosureOptionsList"></div>
                        <button type="button" class="btn btn-secondary btn-sm mt-2" id="addEnclosureOptionButton">Add
                            Enclosure Options</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveDocumentButton">Save changes</button>
            </div>
        </div>
    </div>
</div>
